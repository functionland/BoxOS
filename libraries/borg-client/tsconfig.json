{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": [
      "ES2019",
      "DOM"
    ],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "rootDir": "./"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "scripts/**/*",
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
