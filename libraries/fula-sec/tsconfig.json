{
  "compilerOptions": {
    "removeComments": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "module": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2020", "esnext", "dom"],
    "target": "ES2020",
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": false,
    "skipLibCheck": true
  },
  "paths": {
    "*": ["types/*"]
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ]
}
