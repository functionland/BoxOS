  "description": "Reference implementation of box server in Node.js",
  "main": "dist/index.js",
  "types": "src",
  "scripts": {
    "start": "nodemon --watch dist",
    "build": "node scripts/build.mjs",
    "lint": "eslint src --fix",
    "test": "nyc --reporter=lcov --require esbuild-runner/register tape tests/**/*.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "test:orbitDB": "nyc --reporter=lcov --require esbuild-runner/register tape tests/**/orbitDB.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "test:graphql": "nyc --reporter=lcov --require esbuild-runner/register tape tests/**/graphql.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "test:sel": "nyc --reporter=lcov --require esbuild-runner/register tape $TEST_PATH | tap-spec; nyc report ---reporter=text"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/functionland/graph.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/functionland/borg/issues"
  },
  "homepage": "https://github.com/functionland/borg#readme",
