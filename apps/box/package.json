    "ipfs": "^0.59.0",
    "ipfs-repo": "^9.1.6",
    "it-pipe": "^1.1.0",
    "libp2p": "^0.31.5",
    "libp2p-bootstrap": "^0.12.2",
    "libp2p-mplex": "^0.10.2",
